# Sacred Development Environment - API Configuration Template
# Copy this file to .env and replace with your actual API keys

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"
PGDATABASE=database_name
PGHOST=localhost
PGPORT=5432
PGUSER=username
PGPASSWORD=password

# Authentication
NEXTAUTH_SECRET="your-secret-here"
NEXTAUTH_URL="http://localhost:5000"
SESSION_SECRET="your-session-secret-here"

# OpenAI API
OPENAI_API_KEY="sk-your-openai-api-key-here"

# Server Configuration
NODE_ENV="development"
PORT=5000
HOST="0.0.0.0"

# Guardian AI Configuration
GUARDIAN_ENABLED=true
GUARDIAN_LOG_LEVEL="info"
GUARDIAN_MEMORY_THRESHOLD=80

# Security
CORS_ORIGIN="http://localhost:5000"
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_DEBUGGING_SYSTEM=true
ENABLE_KNOWLEDGE_BASE=true
ENABLE_PERFORMANCE_ANALYSIS=true
ENABLE_AI_INSIGHTS=true

# External Services
WEBHOOK_SECRET="your-webhook-secret"
API_VERSION="v1"

# Logging
LOG_LEVEL="info"
LOG_FORMAT="combined"

# Four-Way Authentication System
# Auth0 Configuration (Admin Portal & Tenant System)
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret
AUTH0_AUDIENCE=https://your-api.com

# Frontegg Configuration (Main Site Login)
FRONTEGG_BASE_URL=https://api.frontegg.com
FRONTEGG_CLIENT_ID=your_frontegg_client_id
FRONTEGG_API_KEY=your_frontegg_api_key

# GlobeKeeper Configuration (Weather API Access)
OPENWEATHER_API_KEY=your_openweather_api_key
GLOBEKEEPER_BASE_URL=https://api.openweathermap.org

# Sacred Login Configuration
SACRED_JWT_SECRET=your_sacred_jwt_secret

# AI & ML API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key
GOOGLE_GEMINI_API_KEY=your_google_gemini_api_key
DEEPSEEK_API_KEY=your_deepseek_api_key
GROQ_API_KEY=your_groq_api_key
HUGGINGFACE_TOKEN=your_huggingface_token

# Cloud & DevOps Services
GITHUB_TOKEN=your_github_token
GITLAB_TOKEN=your_gitlab_token
DOCKER_TOKEN=your_docker_token
NPM_TOKEN=your_npm_token
NETLIFY_TOKEN=your_netlify_token
GITEA_TOKEN=your_gitea_token

# DataStax Astra DB Configuration
ASTRA_DB_ID=your_astra_db_id
ASTRA_DB_REGION=your_astra_db_region
ASTRA_DB_KEYSPACE=your_astra_db_keyspace
ASTRA_DB_APPLICATION_TOKEN=your_astra_db_token

# Embedding & Vector Services
JINA_API_KEY=your_jina_api_key
VOYAGE_AI_API_KEY=your_voyage_ai_api_key
UPSTAGE_API_KEY=your_upstage_api_key
COHERE_API_KEY=your_cohere_api_key

# Monitoring & Analytics
GRAFANA_TOKEN=your_grafana_token
GRAFANA_INSTANCE_URL=your_grafana_instance_url

# URL Shortening & Utilities
REBRANDLY_TOKEN=your_rebrandly_token

# Development Tools
VERCEL_TOKEN=your_vercel_token